<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" style="-fx-background-color: #8B0000;"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Juego.EightOffController">

    <!--Celdas -->
    <top>
        <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: transparent;">
            <padding>
                <Insets top="20.0" bottom="10.0"/>
            </padding>
            <children>
                <HBox fx:id="freeCellsHBox" alignment="CENTER" spacing="15.0">
                    <children>
                        <StackPane fx:id="freeCell1" maxHeight="160" maxWidth="120" minHeight="160.0" minWidth="120.0" prefHeight="160.0" prefWidth="120"
                                   style="-fx-border-color: rgba(255,255,255,0.8); -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12; -fx-background-color: rgba(144, 238, 144, 0.3);"
                                   styleClass="slot"/>
                        <StackPane fx:id="freeCell2" maxHeight="160" maxWidth="120" minHeight="160.0" minWidth="120.0" prefHeight="160.0" prefWidth="120"
                                   style="-fx-border-color: rgba(255,255,255,0.8); -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12; -fx-background-color: rgba(144, 238, 144, 0.3);"
                                   styleClass="slot"/>
                        <StackPane fx:id="freeCell3" maxHeight="160" maxWidth="120" minHeight="160.0" minWidth="120.0" prefHeight="160.0" prefWidth="120"
                                   style="-fx-border-color: rgba(255,255,255,0.8); -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12; -fx-background-color: rgba(144, 238, 144, 0.3);"
                                   styleClass="slot"/>
                        <StackPane fx:id="freeCell4" maxHeight="160" maxWidth="120" minHeight="160.0" minWidth="120.0" prefHeight="160.0" prefWidth="120"
                                   style="-fx-border-color: rgba(255,255,255,0.8); -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12; -fx-background-color: rgba(144, 238, 144, 0.3);"
                                   styleClass="slot"/>
                        <StackPane fx:id="freeCell5" maxHeight="160" maxWidth="120" minHeight="160.0" minWidth="120.0" prefHeight="160.0" prefWidth="120"
                                   style="-fx-border-color: rgba(255,255,255,0.8); -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12; -fx-background-color: rgba(144, 238, 144, 0.3);"
                                   styleClass="slot"/>
                        <StackPane fx:id="freeCell6" maxHeight="160" maxWidth="120" minHeight="160.0" minWidth="120.0" prefHeight="160.0" prefWidth="120"
                                   style="-fx-border-color: rgba(255,255,255,0.8); -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12; -fx-background-color: rgba(144, 238, 144, 0.3);"
                                   styleClass="slot"/>
                        <StackPane fx:id="freeCell7" maxHeight="160" maxWidth="120" minHeight="160.0" minWidth="120.0" prefHeight="160.0" prefWidth="120"
                                   style="-fx-border-color: rgba(255,255,255,0.8); -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12; -fx-background-color: rgba(144, 238, 144, 0.3);"
                                   styleClass="slot"/>
                        <StackPane fx:id="freeCell8" maxHeight="160" maxWidth="120" minHeight="160.0" minWidth="120.0" prefHeight="160.0" prefWidth="120"
                                   style="-fx-border-color: rgba(255,255,255,0.8); -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12; -fx-background-color: rgba(144, 238, 144, 0.3);"
                                   styleClass="slot"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <!-- Fundaciones -->
    <left>
        <VBox fx:id="foundationsVBox" alignment="CENTER" spacing="20.0" style="-fx-background-color: transparent;">
            <padding>
                <Insets left="20.0" top="50.0" bottom="50.0"/>
            </padding>
            <children>

                <StackPane fx:id="fundacionPicas" maxHeight="160" maxWidth="120" minHeight="160.0" minWidth="120.0" prefHeight="160.0" prefWidth="120"
                           style="-fx-border-color: rgba(255,255,255,0.8); -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12; -fx-background-color: rgba(144, 238, 144, 0.3);"
                           styleClass="slot">
                    <children>
                        <Label text="♠" style="-fx-font-size: 36px; -fx-text-fill: black;"/>
                    </children>
                </StackPane>

                <StackPane fx:id="fundacionCorazones" maxHeight="160" maxWidth="120" minHeight="160.0" minWidth="120.0" prefHeight="160.0" prefWidth="120"
                           style="-fx-border-color: rgba(255,255,255,0.8); -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12; -fx-background-color: rgba(144, 238, 144, 0.3);"
                           styleClass="slot">
                    <children>
                        <Label text="♥" style="-fx-font-size: 36px; -fx-text-fill: #ff0000;"/>
                    </children>
                </StackPane>

                <StackPane fx:id="fundacionTreboles" maxHeight="160" maxWidth="120" minHeight="160.0" minWidth="120.0" prefHeight="160.0" prefWidth="120"
                           style="-fx-border-color: rgba(255,255,255,0.8); -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12; -fx-background-color: rgba(144, 238, 144, 0.3);"
                           styleClass="slot">
                    <children>
                        <Label text="♣" style="-fx-font-size: 36px; -fx-text-fill: black;"/>
                    </children>
                </StackPane>

                <StackPane fx:id="fundacionDiamantes" maxHeight="160" maxWidth="120" minHeight="160.0" minWidth="120.0" prefHeight="160.0" prefWidth="120"
                           style="-fx-border-color: rgba(255,255,255,0.8); -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12; -fx-background-color: rgba(144, 238, 144, 0.3);"
                           styleClass="slot">
                    <children>
                        <Label text="♦" style="-fx-font-size: 36px; -fx-text-fill: #ff0000;"/>
                    </children>
                </StackPane>
            </children>
        </VBox>
    </left>

    <!-- Tableus -->
    <center>
        <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: transparent;">
            <padding>
                <Insets top="20.0" bottom="20.0" left="50.0" right="50.0"/>
            </padding>
            <children>
                 <HBox fx:id="tableausHBox" alignment="TOP_CENTER" spacing="25.0" prefHeight="500.0">
                    <children>
                        <VBox fx:id="columna1" alignment="TOP_CENTER" spacing="-40.0"
                              style="-fx-background-color: rgba(144, 238, 144, 0.2); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.5); -fx-border-width: 1;"
                              prefWidth="120.0" minHeight="500.0" maxHeight="1.7976931348623157E308"/>
                        <VBox fx:id="columna2" alignment="TOP_CENTER" spacing="-40.0"
                              style="-fx-background-color: rgba(144, 238, 144, 0.2); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.5); -fx-border-width: 1;"
                              prefWidth="120.0" minHeight="500.0" maxHeight="1.7976931348623157E308"/>
                        <VBox fx:id="columna3" alignment="TOP_CENTER" spacing="-40.0"
                              style="-fx-background-color: rgba(144, 238, 144, 0.2); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.5); -fx-border-width: 1;"
                              prefWidth="120.0" minHeight="500.0" maxHeight="1.7976931348623157E308"/>
                        <VBox fx:id="columna4" alignment="TOP_CENTER" spacing="-40.0"
                              style="-fx-background-color: rgba(144, 238, 144, 0.2); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.5); -fx-border-width: 1;"
                              prefWidth="120.0" minHeight="500.0" maxHeight="1.7976931348623157E308"/>
                        <VBox fx:id="columna5" alignment="TOP_CENTER" spacing="-40.0"
                              style="-fx-background-color: rgba(144, 238, 144, 0.2); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.5); -fx-border-width: 1;"
                              prefWidth="120.0" minHeight="500.0" maxHeight="1.7976931348623157E308"/>
                        <VBox fx:id="columna6" alignment="TOP_CENTER" spacing="-40.0"
                              style="-fx-background-color: rgba(144, 238, 144, 0.2); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.5); -fx-border-width: 1;"
                              prefWidth="120.0" minHeight="500.0" maxHeight="1.7976931348623157E308"/>
                        <VBox fx:id="columna7" alignment="TOP_CENTER" spacing="-40.0"
                              style="-fx-background-color: rgba(144, 238, 144, 0.2); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.5); -fx-border-width: 1;"
                              prefWidth="120.0" minHeight="500.0" maxHeight="1.7976931348623157E308"/>
                        <VBox fx:id="columna8" alignment="TOP_CENTER" spacing="-40.0"
                              style="-fx-background-color: rgba(144, 238, 144, 0.2); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.5); -fx-border-width: 1;"
                              prefWidth="120.0" minHeight="500.0" maxHeight="1.7976931348623157E308"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>

    <!-- Botones -->
    <bottom>
        <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: transparent;">
            <padding>
                <Insets bottom="20.0" top="10.0"/>
            </padding>
            <children>
                <!-- Estado del juego -->
                <Label fx:id="lblEstado" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #FFD700; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 4, 0.5, 1, 1);"/>

                <!-- Botones de control  -->
                <HBox alignment="CENTER" spacing="30.0">
                    <children>
                        <Button fx:id="btnPista" mnemonicParsing="false" prefHeight="45.0" prefWidth="120.0"
                                style="-fx-font-family: 'Montserrat SemiBold', 'Segoe UI Semibold', 'Roboto Medium'; -fx-font-size: 14px; -fx-text-fill: white;
                                 -fx-background-color: linear-gradient(#0f3d2e, #0b2a20); -fx-background-insets: 0,1;
                                 -fx-background-radius: 18; -fx-border-radius: 18; -fx-border-color: #2a5948;
                                 -fx-border-width: 2; -fx-padding: 8 20 8 20;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 14, 0.25, 0, 3);
                                 -fx-cursor: hand; -fx-font-weight: bold;"
                                text="💡 Pista"/>

                        <Button fx:id="btnUndo" mnemonicParsing="false" prefHeight="45.0" prefWidth="120.0"
                                style="-fx-font-family: 'Montserrat SemiBold', 'Segoe UI Semibold', 'Roboto Medium'; -fx-font-size: 14px; -fx-text-fill: white;
                                 -fx-background-color: linear-gradient(#0f3d2e, #0b2a20); -fx-background-insets: 0,1;
                                 -fx-background-radius: 18; -fx-border-radius: 18; -fx-border-color: #2a5948;
                                 -fx-border-width: 2; -fx-padding: 8 20 8 20;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 14, 0.25, 0, 3);
                                 -fx-cursor: hand; -fx-font-weight: bold;"
                                text="↩ Undo"/>

                        <Button fx:id="btnSalir" mnemonicParsing="false" prefHeight="45.0" prefWidth="120.0"
                                style="-fx-font-family: 'Montserrat SemiBold', 'Segoe UI Semibold', 'Roboto Medium'; -fx-font-size: 14px; -fx-text-fill: white;
                                 -fx-background-color: linear-gradient(#8B0000, #660000); -fx-background-insets: 0,1;
                                 -fx-background-radius: 18; -fx-border-radius: 18; -fx-border-color: #A52A2A;
                                 -fx-border-width: 2; -fx-padding: 8 20 8 20;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 14, 0.25, 0, 3);
                                 -fx-cursor: hand; -fx-font-weight: bold;"
                                text="Salir"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>